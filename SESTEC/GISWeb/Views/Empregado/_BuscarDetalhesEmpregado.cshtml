@using GISModel.Entidades



<div class="row">
    <div class="col-xs-12">
        <h3 class="header smaller lighter blue">
            <b>Controles relacionado ao risco da função </b>
        </h3>
    </div>
</div>


<div class="row">
    <div class="col-xs-12">


        @if (ViewBag.MedidasDeControleRiscoFuncao != null)
        {
            <div>
                <table id="dynamic-table" class="table table-striped table-bordered table-hover">
                    <thead>
                        <tr>
                            <th width="100px"></th>
                            <th>Controle </th>
                            <th>Classificação da Medida</th>
                            

                        </tr>

                    </thead>

                    <tbody>

                        @foreach (MedidasControleRiscoFuncao iImagens in ViewBag.MedidasDeControleRiscoFuncao)
                        {
                            <tr id="linha-@iImagens.IDMedidasDeControleRiscoFuncao">
                                <td>
                                    <img src="/Images/MedidasDeControle/@iImagens.IDMedidasDeControleRiscoFuncao/@iImagens.Imagem" alt="Estabelecimento" width="70px" height="70px" title="@iImagens.NomeDaImagem" />

                                </td>
                                <td>@iImagens.ControleExistentes</td>
                                <td>@iImagens.EClassificacaoDaMedida</td>
                                
                            </tr>

                        }

                    </tbody>
                </table>
            </div>


        }

    </div>
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jQ_dataTable")

    

}

































