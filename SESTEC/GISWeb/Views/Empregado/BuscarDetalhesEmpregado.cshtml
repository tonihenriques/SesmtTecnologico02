@if (ViewBag.Alocacao != null)
{

    foreach (var iAlocacao in ViewBag.Alocacao)
    {

        if (iAlocacao.Ativado == "True")
        {
            <div>

                <table id="dynamic-table" class="table table-striped table-bordered table-hover">

                    <tbody>

                        <tr id="linha-@iAlocacao.IDAlocacao">

                            <i class="" style="font-size:12px; color:green">Alocacao Ativa</i> &nbsp
                            <i class="ace-icon fa fa-thumbs-up" style="font-size:20px; color:green"></i>
                            <br />
                            @*<a href='@Url.Action("Edicao", "Alocacao", new { id = iAlocacao.IDAlocacao })' class="blue">
                                    <i style="font-size:12px">Clique aqui para Desativar esta alocação</i>
                                </a>*@
                            <br />
                            <br />



                            <p style="font-size:20px;color:blue">
                                Número do Contrato:&nbsp
                                @iAlocacao.Contrato.NumeroContrato
                            </p>

                            @*<i class="material-icons" style="font-size:36px;color:green">Vínculos</i>*@

                            <i class="fa fa-arrows-alt" style="font-size:18px"> Departamento:<i style="color:green">&nbsp;@iAlocacao.Departamento.Sigla</i></i>
                            <br />
                            <i class="fa fa-arrows-alt" style="font-size:18px"> Estabelecimento:<i style="color:green">&nbsp;@iAlocacao.Estabelecimento.NomeCompleto</i></i>
                            <br />
                            <i class="fa fa-arrows-alt" style="font-size:18px"> Cargo:<i style="color:green">&nbsp; @iAlocacao.Cargo.NomeDoCargo</i></i>
                            <br />
                            <i class="fa fa-arrows-alt" style="font-size:18px"> Função:<i style="color:green">&nbsp;@iAlocacao.Funcao.NomeDaFuncao</i></i>
                            <br />
                            <i class="fa fa-arrows-alt" style="font-size:18px"> Equipe:<i style="color:green">&nbsp;@iAlocacao.Equipe.NomeDaEquipe</i></i>
                            <br />
                            <i class="fa fa-arrows-alt" style="font-size:18px">  Data de inclusão:<i style="color:green">&nbsp;@iAlocacao.DataInclusao</i></i>
                            <br />
                            <i class="fa fa-arrows-alt" style="font-size:18px">Admitido por:<i style="color:green">&nbsp;@iAlocacao.UsuarioInclusao</i></i>
                            <br />
                            <br />



                        </tr>
            </div>
            foreach (var iAtividade in ViewBag.AtividadeRisco)
            {

                if (@iAtividade.Atividade.idFuncao == iAlocacao.IDFuncao)
                {


                    @*<li><i class="fa-li fa fa-check-square"></i>@iAtividade.Atividade.Descricao</li>*@

                    <a class="blue" href="#" onclick="BuscarDetalhesDaAtividadeRisco('@iAtividade.TipoDeRisco.IDTipoDeRisco');">
                        <li><i class="">@iAtividade.Atividade.Descricao</i></li>
                        
                    </a>


                    @*<li><i class="fa-li fa fa-check-square"></i>@iAtividade.TipoDeRisco.DescricaoDoRisco</li>*@



                }

            }


        }
    }
}

<br />



@if (ViewBag.ListaEstabelecimentoAmbiente != null)
{
    <div>

        <table id="dynamic-table" class="table table-striped table-bordered table-hover">
            <thead>
                <p style="font-size:20px;color:blue"> Ambientes de Trabalho </p>
                <tr>
                    <th width="50px"></th>
                    <th>Nome do Estabelecimento</th>
                    <th>Resumo do local</th>
                    <th width="89px"></th>
                </tr>
            </thead>

            <tbody>

                @foreach (var iAlocacao in ViewBag.ListaEstabelecimentoAmbiente)
                {

                    <tr id="linha-@iAlocacao.IDEstabelecimentoImagens">
                        <td class="center">
                            <label class="pos-rel">
                                <input type="checkbox" class="ace" />
                                <span class="lbl"></span>
                            </label>
                        </td>
                        <td>@iAlocacao.EstabelecimentoImagens.Estabelecimento.NomeCompleto</td>
                      
                        <td>@iAlocacao.EstabelecimentoImagens.ResumoDoLocal</td>
                        <td>

                            <div class="hidden-sm hidden-xs action-buttons">
                                <a class="blue" href="#" onclick="BuscarDetalhesEstabelecimentoImagens('@iAlocacao.IDAtividadesDoEstabelecimento'); return false;">
                                    <i class="ace-icon fa fa-search bigger-130"></i>
                                </a>

                            </div>

                        </td>




                    </tr>


                }
            </tbody>
        </table>
    </div>

}




@section Scripts {
    @Scripts.Render("~/bundles/jQ_dataTable")

    <script src="~/Scripts/Custom/AtividadeRiscos/Listagem.js"></script>
    <script src="~/Scripts/Custom/AtividadesDoEstabelecimento/Listagem.js"></script>
    <script src="~/Scripts/Custom/Alocacao/Listagem.js"></script>
}




































