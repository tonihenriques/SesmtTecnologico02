<div class="row">
    <div class="col-sm-12">

        @if (TempData["MensagemErro"] != null && !string.IsNullOrEmpty(TempData["MensagemErro"].ToString()))
    {
        <div class="alert alert-danger">
            <button type="button" class="close" data-dismiss="alert">
                <i class="ace-icon fa fa-times"></i>
            </button>

            <strong>
                <i class="ace-icon fa fa-times"></i>
                Erro!
            </strong>

            @TempData["MensagemErro"].ToString()
            <br>
        </div>
}

        @if (TempData["MensagemAlerta"] != null && !string.IsNullOrEmpty(TempData["MensagemAlerta"].ToString()))
    {
        <div class="alert alert-warning">
            <button type="button" class="close" data-dismiss="alert">
                <i class="ace-icon fa fa-times"></i>
            </button>
            <strong>Alerta!</strong>

            @TempData["MensagemAlerta"].ToString()
            <br>
        </div>
}

        @if (TempData["MensagemSucesso"] != null && !string.IsNullOrEmpty(TempData["MensagemSucesso"].ToString()))
    {
        <div class="alert alert-block alert-success">
            <button type="button" class="close" data-dismiss="alert">
                <i class="ace-icon fa fa-times"></i>
            </button>

            <p>
                <strong>
                    <i class="ace-icon fa fa-check"></i>
                    Sucesso!
                </strong>
                @TempData["MensagemSucesso"].ToString()
            </p>

        </div>
}

      

        @if (TempData["MensagemInfo"] != null && !string.IsNullOrEmpty(TempData["MensagemInfo"].ToString()))
    {
        <div class="alert alert-info">
            <button type="button" class="close" data-dismiss="alert">
                <i class="ace-icon fa fa-times"></i>
            </button>
            <strong>Dica!</strong>

            @TempData["MensagemInfo"].ToString()
            <br>
        </div>
}

    </div><!-- /.col -->

</div>
