@using GISModel.Entidades

@{
    ViewBag.Title = "Listagem de Diretorias";
}

<div class="row">
    <div class="col-xs-12">
        <h3 class="header smaller lighter blue">
            Diretoria
            <a href="@Url.Action("Novo", "Diretoria")" class="btn btn-white btn-info btn-bold" style="float: right; margin-top: -2px;">
                <i class="ace-icon fa fa-plus bigger-120 blue"></i>
                Nova Diretoria
            </a>
        </h3>
    </div>
</div>

<div class="row">
    <div class="col-xs-12">

        @{
            Html.RenderPartial("_MensagensDeRetorno");
        }

        @if (ViewBag.Diretoria != null)
        {
            <div>
                <table id="dynamic-table" class="table table-striped table-bordered table-hover">
                    <thead>
                        <tr>
                            <th width="50px"></th>
                            <th>Sigla</th>
                            <th>Descrição</th>
                            <th width="100px"></th>
                        </tr>
                    </thead>

                    <tbody>

                        @foreach (Diretoria iDiretoria in ViewBag.Diretoria)
                        {
                        <tr id="linha-@iDiretoria.IDDiretoria">
                            <td class="center">
                                <label class="pos-rel">
                                    <input type="checkbox" class="ace" />
                                    <span class="lbl"></span>
                                </label>
                            </td>
                            <td>@iDiretoria.Sigla</td>
                            <td>@iDiretoria.Descricao</td>



                            <td>
                                <div class="hidden-sm hidden-xs action-buttons">

                                    <a href='@Url.Action("Novo", "Departamento", new { id = @iDiretoria.IDDiretoria })' class="green">
                                        <i class="ace-icon fa fa-plus bigger-130" title="Criar Departamento"></i>
                                    </a>
                                    <a class="blue" href="#" onclick="DepartamentoDiretoria('@iDiretoria.IDDiretoria','@iDiretoria.Sigla');">
                                        <i class="ace-icon fa fa-search bigger-110" style="font-size:24px;color:red" title="Excluir Diretoria"></i>
                                    </a>
                                    <a class="red" href="#" onclick="DeletarDiretoria('@iDiretoria.IDDiretoria');">
                                        <i class="ace-icon fa fa-trash-o" style="font-size:24px;color:red" title="Excluir Diretoria"></i>
                                    </a>
                                </div>
                                <div class="hidden-md hidden-lg">
                                    <div class="inline pos-rel">
                                        <button class="btn btn-minier btn-yellow dropdown-toggle" data-toggle="dropdown" data-position="auto">
                                            <i class="ace-icon fa fa-caret-down icon-only bigger-120"></i>
                                        </button>

                                        <ul class="dropdown-menu dropdown-only-icon dropdown-yellow dropdown-menu-right dropdown-caret dropdown-close">


                                            <li>
                                                <a href="#" class="tooltip-error" onclick="DeletarDiretoria('@iDiretoria.IDDiretoria');" data-rel="tooltip" title="Delete">
                                                    <span class="red">
                                                        <i class="ace-icon fa fa-trash-o bigger-120"></i>
                                                    </span>
                                                </a>
                                            </li>
                                        </ul>
                                    </div>
                                </div>
                            </td>
                        </tr>

                        }

                    </tbody>
                </table>
            </div>
        }

    </div>
</div>










@section Scripts {
    @Scripts.Render("~/bundles/jQ_dataTable")
<script src="~/Scripts/Custom/Diretoria/Lista.js"></script>
   
}
