@using GISModel.Entidades




@if (ViewBag.TipoDeRisco != null)
{
    <div>

        <table id="dynamic-table" class="table table-striped table-bordered table-hover">
            <thead>
                <p style="font-size:20px;color:blue"> Riscos da Função </p>
                <tr>
                    <th width="50px"></th>
                    <th>Descrição do Risco</th>
                    <th>Evento Perigoso</th>
                    <th>Possiveis Danos</th>
                    <th></th>
                    
                </tr>
            </thead>

            <tbody>

                @foreach (var iAlocacao in ViewBag.TipoDeRisco)
                {

                <tr id="linha-@iAlocacao.IDMedidasDeControleRiscoFuncao">
                    <td class="center">
                        <label class="pos-rel">
                            <input type="checkbox" class="ace" />
                            <span class="lbl"></span>
                        </label>
                    </td>
                    <td>@iAlocacao.AtividadeRiscos.TipoDeRisco.DescricaoDoRisco</td>
                    <td>@iAlocacao.AtividadeRiscos.TipoDeRisco.EventoPerigoso.Descricao</td>
                    <td>@iAlocacao.AtividadeRiscos.TipoDeRisco.PossiveisDanos.DescricaoDanos</td>
                    
                    <td>
                        <div class="hidden-sm hidden-xs action-buttons">
                            <div class="hidden-sm hidden-xs action-buttons">
                                <a class="blue" href="#" onclick="BuscarDetalhesDeMedidasDeControle('@iAlocacao.IDMedidasDeControleRiscoFuncao'); return false;">
                                    <i class="ace-icon fa fa-search-plus bigger-130"></i>
                                </a>
                            </div>
                        </div>

                    </td>

                </tr>


                }
            </tbody>
        </table>
    </div>

}




@section Scripts {
    @Scripts.Render("~/bundles/jQ_dataTable")

    
}

