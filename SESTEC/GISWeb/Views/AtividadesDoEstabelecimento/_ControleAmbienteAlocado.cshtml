
@using GISModel.Entidades

@if (Model != null)
{


}


<div class="row">
    <div class="col-xs-12">
        <h3 class="header smaller lighter blue">
            <b>Controles do Risco deste Ambiente </b>
        </h3>
    </div>
</div>





        @if (ViewBag.Imagens != null)
        {
            <div>
                <table id="dynamic-table" class="table table-striped table-bordered table-hover">
                    <thead>
                        <tr>
                            <th width="80px"></th>
                            <th>Classe</th>
                            <th>Medida existente</th>
                            <th>Controle</th>
                        </tr>

                    </thead>

                    <tbody>

                        @foreach (var iRisco in ViewBag.Imagens)
                        {


                        <tr id="linha-@iRisco.IDTipoDeRisco">
                            <td>

                                <img src="~/Images/MedidasDeControle/@iRisco.IDMedidasDeControle/@iRisco.Imagem" alt="Medida de Controle" width="70px" height="70px" title="@iRisco.NomeDaImagem" />

                            </td>
                            <td>@iRisco.EClassificacaoDaMedida</td>
                            <td>@iRisco.MedidasExistentes</td>
                            <td>@iRisco.EControle</td>




                        </tr>

                        }

                    </tbody>
                </table>
            </div>
        }

