
@using GISModel.Entidades
@using GISModel.DTO.AtividadesAlocada

@if (Model != null)
{


}


<div class="row">
    <div class="col-xs-12">
        <h3 class="header smaller lighter blue">
            <b>Atividade e Riscos vinculado </b>
        </h3>
    </div>
</div>


@foreach (var iImagens1 in ViewBag.ListaAtividades)
{



    <img src="/Images/AtividadesEstabelecimentoImagens/@iImagens1.AtividadesDoEstabelecimento.IDAtividadesDoEstabelecimento/@iImagens1.AtividadesDoEstabelecimento.Imagem" alt="Estabelecimento" width="90px" title="@iImagens1.AtividadesDoEstabelecimento.NomeDaImagem" />

    <i>&nbsp; @iImagens1.AtividadesDoEstabelecimento.DescricaoDestaAtividade</i>




    <div class="row">
        <div class="col-xs-12">



            @if (ViewBag.Imagens != null )
            {

                <div>
                    <table id="RiscosRelacionadoAmbiente" class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                @*<th width="100px"></th>*@

                                <th>Descrição </th>
                                <th>Possíveis Danos</th>
                                <th width="90px">Controle</th>
                            </tr>

                        </thead>

                        <tbody>




                            @foreach (var iImagens in ViewBag.DescricaoRiscos)
                            {
                               
                            
                                


                                <tr id="linha-@iImagens.AtividadesDoEstabelecimento.IDAtividadesDoEstabelecimento">





                                    <td>@iImagens.AtividadesDoEstabelecimento.EventoPerigoso.Descricao</td>
                                    <td>@iImagens.AtividadesDoEstabelecimento.PossiveisDanos.DescricaoDanos</td>
                                        <td> 
                                           
                                            @if(ViewBag.TotalMCE > 0)
                                            {                                           

                                                <div class="hidden-sm hidden-xs action-buttons center">
                                                    <div class="hidden-sm hidden-xs action-buttons">
                                                        <a class="green" href="#" onclick="BuscarDetalhesDeMedidasDeControleEstabelecimento('@iImagens.IDTipoDeRisco'); return false;">
                                                            <i class="ace-icon fa fa-search bigger-130" title="Medida de Controle Existente"></i>
                                                        </a>
                                                        <a href="#" class="tooltip-info" onclick="Exposicao('@ViewBag.AtivAloc','@ViewBag.Aloc','@iImagens.IDTipoDeRisco',' @ViewBag.IdEmpregado');" data-rel="tooltip" title="Cadastrar Exposição ">
                                                            <span class="red">
                                                                <i class="ace-icon fa fa-search bigger-120"></i>
                                                            </span>
                                                        </a>

                                                    </div>
                                                </div>
                                            }
                                            else
                                            {
                                                <div class="hidden-sm hidden-xs action-buttons center">
                                                    <div class="hidden-sm hidden-xs action-buttons">
                                                        <a class="light-red" href="#" onclick="BuscarDetalhesDeMedidasDeControleEstabelecimento('@iImagens.IDTipoDeRisco'); return false;">
                                                            <i class="ace-icon fa fa-search bigger-130" title="Medida de Controle Existente"></i>
                                                        </a>


                                                        <a class="red" href="#" onclick="ListarPlanoDeAcao('@iImagens.IDTipoDeRisco'); return false;">
                                                            <i class="ace-icon fa fa-exclamation-triangle bigger-130" title="Plano de Ação"></i>
                                                        </a>
                                                       
                                                        
                                                        <a href="#" class="tooltip-info" onclick="Exposicao('@ViewBag.AtivAloc','@ViewBag.Aloc','@iImagens.IDTipoDeRisco',' @ViewBag.IdEmpregado');" data-rel="tooltip" title="Cadastrar Exposição ">
                                                            <span class="red">
                                                                <i class="ace-icon fa fa-search bigger-120"></i>
                                                            </span>
                                                        </a>

                                                           
                                                    </div>
                                                </div>
                                                            



                                            }



                                                <div class="hidden-md hidden-lg">
                                                    <div class="inline pos-rel">
                                                        <button class="btn btn-minier btn-yellow dropdown-toggle" data-toggle="dropdown" data-position="auto">
                                                            <i class="ace-icon fa fa-caret-down icon-only bigger-120"></i>
                                                        </button>

                                                        <ul class="dropdown-menu dropdown-only-icon dropdown-yellow dropdown-menu-right dropdown-caret dropdown-close">
                                                            <li>
                                                                <a href="#" class="tooltip-info" onclick="BuscarDetalhesDeMedidasDeControleEstabelecimento('@iImagens.AtividadesDoEstabelecimento.IDAtividadesDoEstabelecimento'); return false;" data-rel="tooltip" title="View">
                                                                    <span class="blue">
                                                                        <i class="ace-icon fa fa-search-plus bigger-120"></i>
                                                                    </span>
                                                                </a>
                                                            </li>

                                                        </ul>
                                                    </div>
                                                </div>
                                           
                                 </td>

                                    

                                </tr>


                            }    

                        </tbody>
                    </table>
                </div>


            }

        </div>
    </div>
}


