@using GISModel.Entidades



@{

    <div class="row">
        <div class="col-xs-12">
            <h3 class="header smaller lighter blue">
                <b>Riscos relacionadas a este Ambiente </b>
            </h3>
        </div>
    </div>


    <div class="row">
        <div class="col-xs-12">

            <div>
                <table id="RiscosRelacionadoAmbiente" class="table table-striped table-bordered table-hover">
                    <thead>
                        <tr>
                            <th width="100px"></th>
                            <th>Atividade </th>
                            <th>Descrição </th>
                            <th>Possíveis Danos</th>
                            <th width="100px">Controle</th>
                        </tr>

                    </thead>

                    <tbody>

                        @foreach (TipoDeRisco iImagens in ViewBag.Imagens)
                        {
                            <tr id="linha-@iImagens.AtividadesDoEstabelecimento.IDAtividadesDoEstabelecimento">
                                <td>
                                    <img src="/Images/AtividadesEstabelecimentoImagens/@iImagens.AtividadesDoEstabelecimento.IDAtividadesDoEstabelecimento/@iImagens.AtividadesDoEstabelecimento.Imagem" alt="Estabelecimento" width="70px" height="70px" title="@iImagens.AtividadesDoEstabelecimento.NomeDaImagem" />

                                </td>
                                <td>@iImagens.AtividadesDoEstabelecimento.DescricaoDestaAtividade</td>
                                <td>@iImagens.PerigoPotencial.DescricaoEvento</td>
                                <td>@iImagens.PossiveisDanos.DescricaoDanos</td>
                                <td>
                                     <div class="hidden-sm hidden-xs action-buttons center">
                                       
                                         <a class="red" href="#" onclick="BuscarDetalhesDeMedidasDeControleEstabelecimento('@iImagens.IDTipoDeRisco'); return false;">
                                             <i class="ace-icon fa fa-search bigger-130" title="Criar Controle"></i>
                                         </a>

                                        </div>

                                       

                                        <div class="hidden-md hidden-lg">
                                            <div class="inline pos-rel">
                                                <button class="btn btn-minier btn-yellow dropdown-toggle" data-toggle="dropdown" data-position="auto">
                                                    <i class="ace-icon fa fa-caret-down icon-only bigger-120"></i>
                                                </button>
                                                <ul class="dropdown-menu dropdown-only-icon dropdown-yellow dropdown-menu-right dropdown-caret dropdown-close">
                                                    <li>
                                                        <a href="#" class="tooltip-info" onclick="BuscarDetalhesDeMedidasDeControleEstabelecimento('@iImagens.IDTipoDeRisco'); return false;" data-rel="tooltip" title="View">
                                                            <span class="blue">
                                                                <i class="ace-icon fa fa-search-plus bigger-120"></i>
                                                            </span>
                                                        </a>
                                                    </li>

                                                </ul>
                                            </div>
                                        </div>
                                </td>
                            </tr>

                        }

                    </tbody>
                </table>
            </div>

        </div>
    </div>
}


