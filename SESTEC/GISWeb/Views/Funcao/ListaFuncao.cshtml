
@using GISModel.Entidades

@{
    ViewBag.Title = "ListaFuncao";
}

<h2>ListaFuncao</h2>

<div class="row">
    <div class="col-xs-12">
        <h3 class="header smaller lighter blue">
            Função           
                
                    <a class="btn btn-white btn-info btn-bold" style="float: right; margin-top: -2px;" href="javascript:history.back()">
                        <i class="ace-icon fa fa-arrow-left"></i>
                        Voltar
                    </a>
                
            @*<a href="@Url.Action("Novo", "Funcao")" class="btn btn-white btn-info btn-bold" style="float: right; margin-top: -2px;">
            <i class="ace-icon fa fa-plus bigger-120 blue"></i>
            Nova Função
        </a>*@
        </h3>
    </div>
</div>

<div class="row">
    <div class="col-xs-12">

        @{
            Html.RenderPartial("_MensagensDeRetorno");
        }

        @if (ViewBag.Funcao != null)
        {
            <div>
                <table id="dynamic-table" class="table table-striped table-bordered table-hover">
                    <thead>
                        <tr>
                            <th width="50px"></th>
                            <th width="70px">Diretoria</th>
                            <th width="400px">Nome do Cargo</th>
                            <th width="300px">Nome da Função</th>
                            <th width="89px"></th>
                        </tr>
                    </thead>

                    <tbody>

                        @foreach (Funcao iFuncao in ViewBag.Funcao)
                        {
                            <tr id="linha-@iFuncao.IDFuncao">
                                <td class="center">
                                    <label class="pos-rel">
                                        <input type="checkbox" class="ace" />
                                        <span class="lbl"></span>
                                    </label>
                                </td>
                                <td>@iFuncao.Cargo.Diretoria.Sigla</td>
                                <td>@iFuncao.Cargo.NomeDoCargo</td>
                                <td>@iFuncao.NomeDaFuncao</td>

                                <td>
                                    <div class="hidden-sm hidden-xs action-buttons">

                                        <a href='@Url.Action("Novo", "Atividade", new { id = @iFuncao.IDFuncao, nome=@iFuncao.NomeDaFuncao, idDiretoria = @iFuncao.Cargo.IDDiretoria, nomeDiretoria =@iFuncao.Cargo.Diretoria.Sigla })' title="Cadastrar Atividade" class="green">
                                            <i class="ace-icon fa fa-plus-square" style="font-size:24px;color:green" title="Criar Atividade"></i>
                                        </a>

                                        <a class="red" href="#" onclick="DeletarFuncao('@iFuncao.IDFuncao');">
                                            <i class="ace-icon fa fa-trash-o " style="font-size:24px" title="Deletar"></i>
                                        </a>
                                    </div>

                                    <div class="hidden-md hidden-lg">
                                        <div class="inline pos-rel">
                                            <button class="btn btn-minier btn-yellow dropdown-toggle" data-toggle="dropdown" data-position="auto">
                                                <i class="ace-icon fa fa-caret-down icon-only bigger-120"></i>
                                            </button>

                                            <ul class="dropdown-menu dropdown-only-icon dropdown-yellow dropdown-menu-right dropdown-caret dropdown-close">

                                                <li>
                                                    <a href='@Url.Action("Novo", "Atividade", new { id = @iFuncao.IDFuncao, nome=@iFuncao.NomeDaFuncao, idDiretoria = @iFuncao.Cargo.IDDiretoria, nomeDiretoria =@iFuncao.Cargo.Diretoria.Sigla })' class="tooltip-success" data-rel="tooltip" title="Edit">
                                                        <span class="green">
                                                            <i class="ace-icon fa fa-plus-square bigger-120" title="Criar Atividade"></i>
                                                        </span>
                                                    </a>
                                                </li>

                                                <li>
                                                    <a href="#" class="tooltip-error" onclick="DeletarFuncao('@iFuncao.IDFuncao');" data-rel="tooltip" title="Delete">
                                                        <span class="red">
                                                            <i class="ace-icon fa fa-trash-o bigger-120" title="Deletar"></i>
                                                        </span>
                                                    </a>
                                                </li>
                                            </ul>
                                        </div>
                                    </div>
                                </td>
                            </tr>

                        }

                    </tbody>
                </table>
            </div>
        }

    </div>
    


</div>

@section Scripts {
    @Scripts.Render("~/bundles/jQ_dataTable")

    <script src="~/Scripts/Custom/Funcao/Lista.js"></script>
}
